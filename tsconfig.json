{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/assets": ["./public/assets"],
      "@/components": ["./components"],
      "@/lib": ["./lib"],
      "@/hooks": ["./hooks"],
      "@/app": ["./app"],
      "@/styles": ["./styles"],
      "@/types": ["./types"],
      "@/utils": ["./utils"]
    }
  },
  "include": [
    "next-env.d.ts",
    "images.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
